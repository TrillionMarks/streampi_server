<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="400.0" minWidth="600.0" spacing="5.0" style="-fx-background-color: #212121;" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="updaterPKG.updaterController">
   <children>
      <Label fx:id="headingLabel" text="[Heading]" textFill="WHITE">
         <font>
            <Font name="Roboto Regular" size="35.0" />
         </font>
      </Label>
      <Label fx:id="subHeadingLabel" text="[Subheading]">
         <font>
            <Font name="Roboto Regular" size="17.0" />
         </font>
      </Label>
      <Label text="Changelog :">
         <font>
            <Font name="Roboto Regular" size="16.0" />
         </font>
         <padding>
            <Insets top="20.0" />
         </padding>
      </Label>
      <Label fx:id="changelogLabel" text="[Changelog]">
         <font>
            <Font name="Roboto Regular" size="14.0" />
         </font>
      </Label>
      <Region prefHeight="200.0" prefWidth="200.0" VBox.vgrow="SOMETIMES" />
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <JFXButton buttonType="RAISED" onAction="#cancelButtonClicked" style="-fx-background-color: #484848;" text="No Thanks!" textFill="WHITE" />
            <JFXButton buttonType="RAISED" onAction="#updateButtonClicked" style="-fx-background-color: #484848;" text="Download and install" textFill="WHITE" />
         </children>
      </HBox>
   </children>
</VBox>
